PORT=5000
MONGO_URI=mongodb://mongo:27017/reporttracker

# JWT secret - set to a secure random value
JWT_SECRET=replace_with_secure_jwt_secret

# Notify.lk settings
NOTIFYLK_ENABLED=true
NOTIFYLK_USER_ID=your_notifylk_user_id
NOTIFYLK_API_KEY=your_notifylk_api_key
NOTIFYLK_SENDER_ID=NotifyDEMO
APP_BASE_URL=https://your.domain

# Optional: adjust background processor
NOTIFYLK_PROCESS_INTERVAL_MS=60000
NOTIFYLK_MAX_ATTEMPTS=5

# AWS S3 (optional)
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
